---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Corpus.uy" description='La mejor banda del planeta'>
    <section class="flex flex-col justify-center items-center min-h-screen bg-center bg-no-repeat bg-[url('/HD.webp')] bg-zinc-900/70 bg-blend-multiply bg-cover">
        <div class="px-4 text-center">
            <!-- Tarjeta con efecto glassmorphic -->
            <div class="backdrop-filter backdrop-blur-lg bg-zinc-500/30 border border-gray-200 rounded-lg p-8 hover:bg-zinc-200/40 transition duration-300 ease-in-out">
                <h1 class="mb-4 text-4xl font-extrabold tracking-tight leading-none text-white md:text-5xl lg:text-6xl">Sigan viendo.</h1>
            </div>
        </div>
    </section>
    <!-- Elemento audio para la canciÃ³n de fondo -->
    <audio autoplay loop>
        <source src="/vaimaca.mp3" type="audio/mpeg">
        Tu navegador no soporta el elemento de audio.
    </audio>
</Layout>
