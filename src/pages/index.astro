---
import Layout from "../layouts/Layout.astro";
import HeroSection from "../components/HeroSection.astro";
import AboutSection from "../components/AboutSection.astro";
import IntegrantsSection from "../components/IntegrantsSection.astro";

---

<Layout title="CORPUS" description="Banda de rock uruguaya desde 2014 hasta hoy" canonical="" >
  <HeroSection />
  <AboutSection
    bg="bg-light bg-cover bg-center bg-no-repeat z-20"
    title1="¿ QUIÉNES"
    title2="SOMOS ?"
    id="QuienesSomos"
    description="Banda de rock formada el 28 de Noviembre del 2014 en la ciudad de Los Cerrillos, Canelones, Uruguay. Mezclamos rock con varios de los generos que nos gustan y esa es nuestra mejor excusa para subir a los escenarios a volarte la peluca."
    imageSrc="/images/About2.webp"
  />

  <IntegrantsSection />


  <AboutSection 
  bg="bg-light bg-cover bg-center bg-no-repeat z-20" 
  title1="NUESTRA"
  title2="TRAYECTORIA" 
  description="Desde 2014, CORPUS recorre escenarios, estudios y procesos creativos. Somos una banda nacida en Los Cerrillos, Canelones, con un camino cargado de rock, identidad y una búsqueda sonora constante."
  id="NuestraTrayectoria"
  imageSrc="/images/About.webp"
  button={{
    text: "Conocé la historia completa",
    href: "/trayectoria"
  }} 
/>

  
</Layout>
