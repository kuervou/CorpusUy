---
const { nombre, rol, imageVertical, imageHorizontal, stats } = Astro.props;
---

<div class="member-card">
  <!-- Vista mÃ³vil: imagen vertical con datos superpuestos -->
  <div class="block md:hidden relative observer-target grayscale transition-all duration-700">
    <img
      src={imageVertical}
      alt={nombre}
      class="w-full object-cover aspect-[3/4]"
      loading="lazy"
    />
    <!-- Capa semi-transparente para resaltar el texto -->
    <div class="absolute inset-0 bg-black bg-opacity-50 flex flex-col justify-center items-center">
      <h2 class="text-white text-2xl font-bold">{nombre}</h2>
      <p class="text-white text-lg">{rol}</p>
      {stats && (
        <div class="mt-2 text-white">
          {stats}
        </div>
      )}
    </div>
  </div>

 <!-- Vista escritorio: imagen horizontal a pantalla completa con texto a la izquierda -->
<div class="hidden md:block relative w-full h-screen observer-target grayscale transition-all duration-700">
  <!-- Imagen de fondo ocupando todo el contenedor -->
    <img
      src={imageHorizontal}
      alt={nombre}
      class="absolute top-0 left-0 w-full h-full object-cover aspect-[4/3]"
      loading="lazy"
    />
    <!-- Capa oscura (opcional) para mejorar legibilidad del texto -->
    <div class="absolute inset-0 bg-black bg-opacity-30"></div>
    <!-- Contenedor del texto -->
    <div class="relative z-10 flex flex-col justify-center h-full ml-8 text-white max-w-xl">
      <h2 class="text-4xl font-bold">{nombre}</h2>
      <p class="text-2xl mb-4">{rol}</p>
      {stats && (
        <div class="mt-2">
          {stats}
        </div>
      )}
    </div>
  </div>
</div>
