---
// Importamos los componentes
import Cross from '../components/icons/Cross.astro';
import SocialMedia from './SocialMedia.astro';
---

<footer class="bg-zinc-900  text-light p-10">
  <div class="flex flex-col items-center">
    <Cross class="w-16 h-16" />

    <!-- Información de la compañía -->
    <p class="font-bold text-center">Corpus UY</p>

    <!-- Redes sociales -->
    <SocialMedia />
      

    <div class="text-center">
        <p>Copyright © 2024 - All rights reserved</p>
  
        <!-- Texto 'kuervou' con hover y link a hernancabara.com -->
        <a href="https://hernancabara.com" target="_blank" class="relative group inline-block text-center mt-2">
          <span class="text-white transition-transform transform group-hover:scale-110">Developed by</span>
          <span class="text-[#6d28d9] font-bold transition-transform transform group-hover:scale-110 relative">
            kuervou
            <!-- Destello detrás del texto 'kuervou' -->
            <span class="absolute inset-0 bg-[#6d28d9] opacity-0 transition-opacity group-hover:opacity-40 rounded-full blur-lg"></span>
          </span>
        </a>
    </div>
  </div>
</footer>
