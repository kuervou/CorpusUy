---
// Instagram.astro
const {link, class: className = '' } = Astro.props; // Permite pasar clases como prop
---

<a class="relative group cursor-pointer" href={link} target="_blank">
  <svg
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    class={`block text-primary ${className} transition-transform transform group-hover:scale-110`} 
  >
    <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
    <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
    <line x1="17.5" y1="6.5" x2="17.5" y2="6.5"></line>
  </svg>
  <span class="absolute inset-0 bg-[#DC2D45] opacity-0 transition-opacity group-hover:opacity-40 rounded-full blur-lg"></span>
</a>
