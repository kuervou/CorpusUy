---
const { title, subtitle, text } = Astro.props;
---


  
    <div class="absolute top-24 sm:top-auto sm:bottom-0 left-0 w-full h-2/5 sm:bg-black sm:bg-opacity-60 flex flex-col justify-center items-center p-8  -z-10">
      <h1 class="text-center text-6xl sm:text-7xl font-bold mb-4">{title}</h1>
      {subtitle && (
        <h2 class="text-center text-xl sm:text-2xl md:text-3xl font-light mb-4">
          {subtitle}
        </h2>
      )}
      {text && (
      <p class="text-xl pb-8 xl:text-2xl 2xl:text-3xl text-center z-0">{text}</p>
      )
    }
    </div>
  

