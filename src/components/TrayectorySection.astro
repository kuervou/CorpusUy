---
import Layout from '../layouts/Layout.astro';
const { bg, title, description1, description2, imageSrc1, imageSrc2, youtubeSrc1, youtubeSrc2, youtubeSrc0 } = Astro.props;
---

<section class={`${bg} flex flex-col justify-center items-center w-full min-h-screen text-white`} id="Hola" style="background-size: cover; background-repeat: no-repeat;">
    
    <!-- Condicional para el Título -->
    {title && (
        <div class="w-full flex flex-col items-center justify-center py-8 px-4 md:px-12 xl:px-24">
            <h1 class="text-4xl sm:text-5xl md:text-6xl text-center font-bold">
                {title}
            </h1>
        </div>
    )}

    <!-- Condicional para la primera descripción -->
    {description1 && (
        <div class="w-full flex flex-col items-center justify-center py-4 px-4 md:px-12 xl:px-24">
            <p class="text-xl sm:text-2xl md:text-3xl text-center">
                {description1}
            </p>
        </div>
    )}

    {youtubeSrc0 && (
        <div class="w-full flex justify-center py-8 px-4 sm:px-12 md:px-24 xl:px-56">
        <!-- Contenedor que ajusta la proporción del iframe -->
        <div class="relative w-full" style="padding-bottom: 56.25%; height: 0; overflow: hidden;">
            <iframe class="absolute top-0 left-0 w-full h-full" src={youtubeSrc0} title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
        </div>
    )}

    <!-- Condicional para la primera imagen -->
    {imageSrc1 && (
        <div class="w-full flex justify-center py-8 px-4 sm:px-12 md:px-24 xl:px-56">
            <img src={imageSrc1} alt="Primera imagen" class="w-full h-auto object-cover max-w-[calc(100%-10px)] md:max-w-[calc(100%-20px)] shadow-lg" />
        </div>
    )}

    <!-- Condicional para primer video de Youtube con el mismo ancho que las imagenes -->
    {youtubeSrc1 && (
        <div class="w-full flex justify-center py-8 px-4 sm:px-12 md:px-24 xl:px-56">
          <!-- Contenedor que ajusta la proporción del iframe -->
          <div class="relative w-full" style="padding-bottom: 56.25%; height: 0; overflow: hidden;">
            <iframe class="absolute top-0 left-0 w-full h-full" src={youtubeSrc1} title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
          </div>
        </div>
      )}
      

    <!-- Condicional para la segunda descripción -->
    {description2 && (
        <div class="w-full flex flex-col items-center justify-center py-4 px-4 md:px-12 xl:px-24">
            <p class="text-xl sm:text-2xl md:text-3xl text-center">
                {description2}
            </p>
        </div>
    )}

    <!-- Condicional para la segunda imagen -->
    {imageSrc2 && (
        <div class="w-full flex justify-center py-8 px-4 sm:px-12 md:px-24 xl:px-56">
            <img src={imageSrc2} alt="Segunda imagen" class="w-full h-auto object-cover max-w-[calc(100%-10px)] md:max-w-[calc(100%-20px)] shadow-lg" />
        </div>
    )}

    {youtubeSrc2 && (
        <div class="w-full flex justify-center py-8 px-4 sm:px-12 md:px-24 xl:px-56">
        <!-- Contenedor que ajusta la proporción del iframe -->
        <div class="relative w-full" style="padding-bottom: 56.25%; height: 0; overflow: hidden;">
            <iframe class="absolute top-0 left-0 w-full h-full" src={youtubeSrc2} title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
        </div>
    )}
   

</section>
